<div class="container p-4">
    <div class="row">
        <div class="col-md-5 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3> Agregar nuevo entrada en la bitacora </h3>
                </div>
                <div class="class-body">
                    <form action="/publi/edit/{{ziggy.id_publi}}" method="POST">
                        <div class="cardBack letters">
                            <label> Titulo: </label>
                            <input class="form-control" type="text" value="{{{ziggy.titulo}}}" name="titulo"
                                required="required" />
                               <label> Contenido: </label>
                              <textarea class="form-control" name="contenido" rows="10" cols="40">{{{ziggy.contenido}}}</textarea>
                            <input type="submit" class="signButton" value="Editar" />
                        </div>
                </div>
            </div>
            </form>
        </div>
    </div>
</div>