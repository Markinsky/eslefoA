<div class="contaier p-4">
    <div class = "row">
         <a href="/adminpreg" class = "btn btn-success">
              <i class = "fas fa-eye" ></i>
            <label> Ver lista de preguntas pendientes </label>
        </a>
    </div>
<div class = "row p-2">
    <table class = "table table-bordered table-striped" >
          <thead class="thead table-Color">
              <tr>
                  <th> Nombre</th>
                  <th> Correo</th>
                  <th> Pregunta</th>
                  <th>Estado</th>
                  <th>Acciones</th>
              </tr>
          </thead>
          <tbody>
              {{#each preg}}
              <tr>
                <td>{{nombre}}</td>
                <td>{{correo}}</td>
                <td>{{pregunta}}</td>
                <td>{{estado}} </td>
                <td>       
             <a href="/adminpreg/drop/{{id_pregunta}}" class = "btn btn-danger">
              <i class = "far fa-trash-alt" ></i>
              </a>
            </td>
              </tr>
              {{/each}}
          </tbody>
    </table>

</div>
</div>