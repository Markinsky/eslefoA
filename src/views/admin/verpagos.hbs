<div class="container accordion para">
    <button type="button" class="accordion__button">
       Pagos pendientes: {{cResult}}
    </button>
    <div class="accordion__content">
<table class = "table" >
          <thead class="table-curso">
              <tr>
                  <th>Nombre del curso</th>
                  <th>Fecha de solicitud</th>
                  <th>Vacante</th>
                  <th>Correo</th>
                  <th>Nivel</th>
                  <th>Precio</th>
                  <th>Nombre del aspirante</th>
                  <th>Metodos de pago</th>
              </tr>
          </thead>
          <tbody class="table-curso">
              {{#each array}}
              <tr>
                <td >{{nombre_curso}}</td>
                <td>{{{formatdate fecha "MM-DD-YYYY"}}}</td>  
                <td>{{resultado}}/{{vacantes}}</td>   
                <td>{{correo}}</td>    
                <td>{{nivel}}</td>
                <td>{{precio}}</td>
                <td>{{nombre}} {{appat}} {{apmat}}</td>
                <td>             
               <a href="/debts/accept/{{id_pago}}" class = "btn btn-success">
              <i class = "fas fa-check" ></i>
              </a>
              <a href="/verpagos/reject/{{id_pago}}" class = "btn btn-danger">
              <i class = "fas fa-times" ></i>
              </a>
              </td>
              </tr>
              {{/each}}
          </tbody>
    </table>
    </div>
</div>
<script>
    document.querySelectorAll(".accordion__button").forEach((button) => {
        button.addEventListener("click", () => {
            const contenido = button.nextElementSibling;
            button.classList.toggle("accordion__button--active");
            if (button.classList.contains("accordion__button--active")) {
                contenido.style.maxHeight = contenido.scrollHeight + "px";
            } else {
                contenido.style.maxHeight = 0;
            }
        });
    });
</script>