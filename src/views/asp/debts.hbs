<div class="container accordion para">
    <button type="button" class="accordion__button">
       Cursos: Pagos pendientes: {{cResult}}
    </button>
    <div class="accordion__content">
<table class = "table" >
          <thead class="table-curso">
              <tr>
                  <th>Nombre del curso</th>
                  <th>Fecha de solicitud</th>
                  <th>Vacante</th>
                  <th>Correo</th>
                  <th>Nivel</th>
                  <th>Precio</th>
                  <th>Nombre del maestro</th>
                  <th>Metodos de pago</th>
              </tr>
          </thead>
          <tbody class="table-curso">
              {{#each arrayDebt}}
              <tr>
                <td >{{nombre_curso}}</td>
                <td>{{{formatdate fecha "MM-DD-YYYY"}}}</td>  
                <td>{{vacantes}}</td>   
                <td>{{correo}}</td>    
                <td>{{nivel}}</td>
                <td>{{precio}}</td>
                <td>{{nombre}} {{appat}}</td>
                <td>             
               <a href="/debts/transfer/{{id_pago}}" class = "btn btn-success">
              <i class = "fas fa-money-bill-wave" ></i>
              </a>
              </td>
              </tr>
              {{/each}}
          </tbody>
    </table>
    </div>
</div>

<div class="container accordion para">
    <button type="button" class="accordion__button">
       Otros: Pagos pendientes: {{cResult}}
    </button>
    <div class="accordion__content">
<table class = "table" >
          <thead class="table-curso">
              <tr>
                  <th>Nombre del curso</th>
                  <th>Fecha de solicitud</th>
                  <th>Vacante</th>
                  <th>Correo</th>
                  <th>Nivel</th>
