<div class="container accordion para">
    <button type="button" class="accordion__button">
       Pagos pendientes: {{cResult}}
    </button>
    <div class="accordion__content">
<table class = "table" >
          <thead class="table-curso">
              <tr>
                  <th>Nombre</th>
                  <th>Maestro/a</th>
                  <th>Estado</th>
                  <th>Vacantes</th>
                  <th>Horario</th>
                  <th>Dias</th>
                  <th>Descripcion</th>
                <th>Acciones</th>
              </tr>
          </thead>
          <tbody class="table-curso">
              {{#each resCursoA}}
              <tr>
                <td >{{nombre_curso}}</td>
                <td>{{nombre}} {{appat}}</td>
                <td>{{estado}}</td>  
                <td>{{vacantes}}</td>   
                <td>{{horario}}</td>    
                <td>{{dias}}</td>
                <td>{{des}}</td> 
                <td>             
               <a href="/newcurso/edit/{{codigo}}" class = "btn btn-success">
              <i class = "fas fa-sign-in-alt" ></i>
              </a>
              </td>
              </tr>
              {{/each}}
          </tbody>
    </table>
    </div>
</div>